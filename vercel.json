{
  "version": 2,
  "builds": [
    {
      "src": "/frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "/frontend/src/App.jsx" }
    },
    {
      "src": "/Backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)", 
      "dest": "/Backend/index.js"
    },
    {
      "src": "/(.*)", 
      "dest": "/frontend/src/App.jsx/$1"
    }
  ]
}
